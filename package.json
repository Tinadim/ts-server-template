{
    "name": "ts-api-server-template",
    "version": "1.0.0",
    "description": "Base project a typescript server using express and mongoose",
    "main": "dist/index.js",
    "scripts": {
        "build": "npm run clean && tsc",
        "clean": "rm -rf ./dist",
        "serve": "npm run build && node dist/index.js",
        "test": "jest"
    },
    "keywords": [
        "node",
        "docker",
        "k8s"
    ],
    "author": "Bernardo Reis",
    "license": "ISC",
    "devDependencies": {
        "@types/bluebird": "^3.5.32",
        "@types/body-parser": "^1.17.1",
        "@types/cors": "^2.8.6",
        "@types/express": "^4.17.6",
        "@types/jest": "^25.2.3",
        "@types/mongoose": "^5.7.36",
        "jest": "^26.0.1",
        "tslint": "^5.20.1",
        "tslint-config-airbnb": "^5.11.2",
        "typescript": "^3.9.3"
    },
    "dependencies": {
        "@types/node": "^14.0.5",
        "bluebird": "^3.7.2",
        "body-parser": "^1.19.0",
        "cors": "^2.8.5",
        "dotenv": "^8.2.0",
        "express": "^4.17.1",
        "express-promise-router": "^3.0.3",
        "http-graceful-shutdown": "^2.3.2",
        "lodash": "^4.17.15",
        "module-alias": "^2.2.2",
        "mongoose": "^5.9.16",
        "ts-jest": "^26.0.0",
        "winston": "^3.2.1"
    },
    "_moduleAliases": {
        "@lib": "dist/lib",
        "@logger": "dist/logger"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm run lint && npm run test"
        }
    },
    "jest": {
        "collectCoverageFrom": [
            "src/**/*.ts"
        ],
        "coverageDirectory": "coverage",
        "coveragePathIgnorePatterns": [
            "/node_modules/"
        ],
        "coverageReporters": [
            "lcov"
        ],
        "coverageThreshold": {
            "global": {
                "branches": 95,
                "functions": 95,
                "lines": 95,
                "statements": 95
            }
        },
        "globals": {
            "ts-jest": {
                "tsConfig": "test/tsconfig.test.json"
            }
        },
        "moduleFileExtensions": [
            "ts",
            "js"
        ],
        "transform": {
            "^.+\\.(ts|tsx)$": "ts-jest"
        },
        "testEnvironment": "node",
        "setupFilesAfterEnv": [
            "./test/jest.setup.ts"
        ]
    }
}
